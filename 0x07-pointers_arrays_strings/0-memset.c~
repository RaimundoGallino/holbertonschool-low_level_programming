#include "holberton.h"

/**
 * _memst - fills memory with a constant value
 * @s: pointer to an array
 * @b: constant char
 * @n: numbers of the constante value repetitions
 * Return: Nothing.
 */

char *_memset(char *s, char b, unsigned int n)
{
	unsigned int c1 = 0;
	char *string = s;

	for (; c1 < n; c1++,s++)
	{
		*s = b;
	}
	return (string);

}
